<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Sprachlernplattform{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
<nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <div class="container">
        <a class="navbar-brand" href="{{ path('dashboard') }}">LinguaLearn</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="mainNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="{{ path('course_index') }}">Kurse</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('lesson_index') }}">Lektionen</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('exercise_index') }}">Übungen</a></li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('admin_index') }}">Admin</a></li>
                {% endif %}
            </ul>
            <div class="d-flex align-items-center gap-2 text-white">
                {% if app.user %}
                    <span class="small">{{ app.user.name ?: app.user.email }}</span>
                    <a class="btn btn-outline-light btn-sm" href="{{ path('app_logout') }}">Logout</a>
                {% else %}
                    <a class="btn btn-outline-light btn-sm" href="{{ path('app_login') }}">Login</a>
                    <a class="btn btn-light btn-sm" href="{{ path('app_register') }}">Registrieren</a>
                {% endif %}
            </div>
        </div>
    </div>
</nav>
<div class="container flex-fill">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}
    {% block body %}{% endblock %}
</div>
<footer class="bg-light py-3 mt-4 border-top">
    <div class="container d-flex justify-content-between align-items-center">
        <span class="text-muted">&copy; {{ 'now'|date('Y') }} LinguaLearn</span>
        <small class="text-muted">Symfony 7 • Bootstrap 5</small>
    </div>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
