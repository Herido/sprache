<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Sprachlernplattform{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <div class="container">
        <a class="navbar-brand" href="{{ path('dashboard') }}">Sprachlernplattform</a>
        <div>
            <a class="nav-link d-inline text-white" href="{{ path('course_index') }}">Kurse</a>
            <a class="nav-link d-inline text-white" href="{{ path('vocabulary_index') }}">Vokabeln</a>
            {% if app.user %}
                <span class="text-white">{{ app.user.name }}</span>
                <a class="nav-link d-inline text-white" href="{{ path('app_logout') }}">Logout</a>
            {% else %}
                <a class="nav-link d-inline text-white" href="{{ path('app_login') }}">Login</a>
            {% endif %}
        </div>
    </div>
</nav>
<div class="container">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}
    {% block body %}{% endblock %}
</div>
</body>
</html>
