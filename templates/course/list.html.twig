{% extends 'base.html.twig' %}
{% block title %}Kurse{% endblock %}
{% block body %}
<h1 class="mb-4">Alle Kurse</h1>
<div class="row">
    {% for course in courses %}
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{ course.title }}</h5>
                    <p class="card-text">{{ course.description }}</p>
                    <span class="badge bg-secondary">{{ course.level.value }}</span>
                    <a href="{{ path('app_course_detail', {id: course.id}) }}" class="btn btn-primary btn-sm mt-2">Details</a>
                </div>
            </div>
        </div>
    {% else %}
        <p>Keine Kurse gefunden.</p>
    {% endfor %}
</div>
{% endblock %}
