{% extends 'base.html.twig' %}
{% block title %}Kurse{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Kurse</h1>
    <a href="{{ path('course_create') }}" class="btn btn-primary">Neuer Kurs</a>
</div>
<div class="row g-3">
    {% for course in courses %}
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">{{ course.title }}</h5>
                    <p class="card-text text-muted">{{ course.language }}</p>
                    <p class="card-text">{{ course.description|u.truncate(120) }}</p>
                    <a href="{{ path('course_show', {id: course.id}) }}" class="btn btn-outline-primary btn-sm">Details</a>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12 alert alert-info">Noch keine Kurse vorhanden.</div>
    {% endfor %}
</div>
{% endblock %}
