{% extends 'base.html.twig' %}
{% block title %}{{ course.title }}{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h3 mb-1">{{ course.title }}</h1>
        <p class="text-muted">Sprache: {{ course.language }}</p>
    </div>
    <div class="btn-group">
        <a href="{{ path('course_edit', {id: course.id}) }}" class="btn btn-outline-primary">Bearbeiten</a>
        <a href="{{ path('lesson_create') }}" class="btn btn-primary">Lektion hinzuf√ºgen</a>
    </div>
</div>
<p>{{ course.description }}</p>

<h2 class="h5 mt-4">Lektionen</h2>
<div class="list-group">
    {% for lesson in course.lessons %}
        <a class="list-group-item" href="{{ path('lesson_show', {id: lesson.id}) }}">{{ lesson.title }}</a>
    {% else %}
        <div class="alert alert-info">Keine Lektionen vorhanden.</div>
    {% endfor %}
</div>
{% endblock %}
