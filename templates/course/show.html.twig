{% extends 'base.html.twig' %}
{% block title %}{{ course.title }}{% endblock %}
{% block body %}
<h1>{{ course.title }}</h1>
<p>{{ course.description }}</p>
<p><span class="badge bg-secondary">Level: {{ course.level.value }}</span></p>
<a href="{{ path('course_enroll', {id: course.id}) }}" class="btn btn-success mb-3">Einschreiben</a>
<h3>Lektionen</h3>
<ul class="list-group">
    {% for lesson in course.lessons %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>{{ lesson.title }}</span>
            <a class="btn btn-outline-primary btn-sm" href="{{ path('lesson_show', {id: lesson.id}) }}">Ã–ffnen</a>
        </li>
    {% else %}
        <li class="list-group-item">Keine Lektionen vorhanden.</li>
    {% endfor %}
</ul>
{% endblock %}
