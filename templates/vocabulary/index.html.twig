{% extends 'base.html.twig' %}
{% block title %}Vokabeltrainer{% endblock %}
{% block body %}
<h1>Vokabeltrainer</h1>
<form method="post" action="{{ path('vocabulary_new') }}" class="row g-2 mb-4">
    <div class="col-md-3"><input name="word" class="form-control" placeholder="Wort" required></div>
    <div class="col-md-3"><input name="translation" class="form-control" placeholder="Übersetzung" required></div>
    <div class="col-md-4"><input name="example" class="form-control" placeholder="Beispielsatz"></div>
    <div class="col-md-2"><button class="btn btn-success w-100">Speichern</button></div>
</form>
<table class="table table-striped">
    <thead><tr><th>Wort</th><th>Übersetzung</th><th>Beispiel</th><th></th></tr></thead>
    <tbody>
    {% for entry in entries %}
        <tr>
            <td>{{ entry.word }}</td>
            <td>{{ entry.translation }}</td>
            <td>{{ entry.exampleSentence }}</td>
            <td><a href="{{ path('vocabulary_delete', {id: entry.id}) }}" class="btn btn-sm btn-outline-danger">Löschen</a></td>
        </tr>
    {% else %}
        <tr><td colspan="4">Keine Vokabeln angelegt.</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
