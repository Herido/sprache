{% extends 'base.html.twig' %}
{% block title %}Login{% endblock %}
{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="mb-4">Login</h1>
        {% if error %}<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>{% endif %}
        <form method="post">
            <div class="mb-3">
                <label class="form-label">E-Mail</label>
                <input type="email" name="_username" class="form-control" value="{{ last_username }}" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Passwort</label>
                <input type="password" name="_password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Anmelden</button>
        </form>
    </div>
</div>
{% endblock %}
