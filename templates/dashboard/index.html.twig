{% extends 'base.html.twig' %}
{% block title %}Dashboard{% endblock %}
{% block body %}
<h1 class="mb-4">Willkommen zur√ºck!</h1>
<div class="row">
    <div class="col-md-8">
        <h2>Aktive Kurse</h2>
        <div class="list-group mb-4">
            {% for course in courses %}
                <a class="list-group-item list-group-item-action" href="{{ path('app_course_detail', {id: course.id}) }}">
                    <div class="d-flex justify-content-between">
                        <strong>{{ course.title }}</strong>
                        <span class="badge bg-info">{{ course.level.value }}</span>
                    </div>
                    <p class="mb-0">{{ course.description }}</p>
                </a>
            {% else %}
                <div class="list-group-item">Keine Kurse gefunden.</div>
            {% endfor %}
        </div>
    </div>
    <div class="col-md-4">
        <h2>Dein Fortschritt</h2>
        <ul class="list-group">
            {% for entry in progress %}
                <li class="list-group-item d-flex justify-content-between">
                    <span>{{ entry.course.title }}</span>
                    <span class="badge bg-success">{{ entry.progressValue }}%</span>
                </li>
            {% else %}
                <li class="list-group-item">Noch kein Fortschritt vorhanden.</li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
