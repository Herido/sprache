{% extends 'base.html.twig' %}
{% block title %}Übungen{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Übungen</h1>
    <a href="{{ path('exercise_create') }}" class="btn btn-primary">Neue Übung</a>
</div>
<div class="list-group">
    {% for exercise in exercises %}
        <a class="list-group-item" href="{{ path('exercise_show', {id: exercise.id}) }}">
            <div class="d-flex justify-content-between align-items-center">
                <span>{{ exercise.question|u.truncate(80) }}</span>
                <span class="badge bg-secondary">{{ exercise.type.value }}</span>
            </div>
        </a>
    {% else %}
        <div class="alert alert-info">Keine Übungen vorhanden.</div>
    {% endfor %}
</div>
{% endblock %}
