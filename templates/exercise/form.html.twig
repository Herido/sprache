{% extends 'base.html.twig' %}
{% block title %}Übung bearbeiten{% endblock %}
{% block body %}
<h1 class="h3 mb-3">{{ exercise.id ? 'Übung bearbeiten' : 'Neue Übung anlegen' }}</h1>
<form method="post" class="card p-4 shadow-sm">
    <div class="mb-3">
        <label class="form-label">Frage</label>
        <textarea name="question" class="form-control" rows="3" required>{{ exercise.question }}</textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Typ</label>
        <select name="type" class="form-select">
            {% for type in types %}
                <option value="{{ type.value }}" {% if exercise.type and exercise.type == type %}selected{% endif %}>{{ type.value }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Antwort</label>
        <textarea name="answer" class="form-control" rows="2" required>{{ exercise.answer }}</textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Lektion</label>
        <select name="lesson" class="form-select" required>
            <option value="">Bitte wählen</option>
            {% for lesson in lessons %}
                <option value="{{ lesson.id }}" {% if exercise.lesson and exercise.lesson.id == lesson.id %}selected{% endif %}>{{ lesson.title }}</option>
            {% endfor %}
        </select>
    </div>
    <button class="btn btn-primary">Speichern</button>
</form>
{% endblock %}
